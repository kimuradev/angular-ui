{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "intrack-ui": {
      "projectType": "library",
      "root": "projects/app",
      "sourceRoot": "projects/app/src",
      "prefix": "ui",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/app/tsconfig.lib.json",
            "project": "projects/app/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/app/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/app/src/test.ts",
            "tsConfig": "projects/app/tsconfig.spec.json",
            "karmaConfig": "projects/app/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/app/**/*.ts",
              "projects/app/**/*.html"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "intrack-ui",
  "schematics": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  }
}
